<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Material.Notification.MessagingText" parent="@*android:style/Widget.Material.Light.TextView">
        <item name="android:textAppearance">@*android:style/TextAppearance.Material.Notification</item>
        <item name="android:ellipsize">end</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <!--QS related values-->
    <style name="Theme.DeviceDefault.QuickSettings" parent="@*android:style/Theme.DeviceDefault">
        <!-- Color palette -->
        <item name="android:colorPrimary">@*android:color/background_dark</item>
        <item name="android:colorPrimaryDark">@*android:color/background_dark</item>
        <item name="android:colorSecondary">@*android:color/background_dark</item>
        <item name="android:colorAccent">@*android:color/background_dark</item>
        <item name="android:colorControlNormal">@*android:color/background_dark</item>
    </style>
</resources>
