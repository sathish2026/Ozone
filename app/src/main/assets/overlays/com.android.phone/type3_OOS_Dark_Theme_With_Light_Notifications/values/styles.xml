        <item name="onePlusActionbarSubtitleColor">@*com.android.phone:color/op_sim_settings_actionbar_text</item>
        <item name="onePlusActionbarIconColor">@*com.android.phone:color/op_sim_settings_actionbar_icon_color</item>
